<section class="user-section">
  <ul class="user-list">
    <% @users.each do |user| %>
      <li class="list-item">
        <div class="photo-wrapper">
          <img src=<%=user.photo%> alt=<%=user.name%> />
        </div>
        <div class="user-info">
          <h2><%= link_to user.name, user_path(user)  %></h2>
          <span class="post-number">
            <% if user.post_counter != nil %>
              Number of posts: <%= user.post_counter %>
            <% else %>
              Number of posts: 0
            <% end %>
          </span>
        </div>
      </li>
    <% end %>
  </ul>
</section>