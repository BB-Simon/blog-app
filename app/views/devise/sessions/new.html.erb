<section class="section-login-form">
  <%= form_for(resource, as: resource_name, html: { class: 'login-form'}, url: session_path(resource_name)) do |f| %>
    <h2 class="login-title">Log in</h2>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: 'login-form-field', autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, class: 'login-form-field', autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in",  class: 'login-form-field' %>
    </div>
  <% end %>

  <div class='login-form'>
    <%= render "devise/shared/links" %>
  </div>

</section>