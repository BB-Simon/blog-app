<section class="section-forgot-password">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'signup-form' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <h2 class="signup-title">Forgot your password?</h2>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: 'signup-form-field', autocomplete: "email" %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: 'signup-form-field' %>
    </div>
  <% end %>

  <div class="signup-form">
    <%= render "devise/shared/links" %>
  </div>

</section>